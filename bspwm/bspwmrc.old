#! /bin/sh
pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V 

bspc config border_width         2
bspc config window_gap           8

bspc config normal_border_color "#54587B"
bspc config presel_feedback_color "#009a8b"
bspc config focused_border_color "#009a8b"

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
#bspc rule -a Firefox-esr state=tiled

# burpsuite fix resolution problem
wmname LG3D &

# background image
feh --bg-fill /home/zaytos/Imagenes/hacker_cyberpunk0.png &
